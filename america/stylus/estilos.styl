@import "nib"
@import "normalize.styl"
@import "fonts.styl"

//animacion(parametro)//mixin para soportar navegadores
//	-webkit-animation parametro
//	-moz-animation parametro
//	-o-animation parametro
//	-ms-animation parametro
//	animation parametro
//poner prefijos
vendor-prefixes = webkit o ms moz camote 

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0
a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
//buttons
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//oocss classes
.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white//color de los icuonos de corazon
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
	&.red
		color red
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black,.3)//le da negro a los 3 colores y 0.3 de transparencia
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.menu
	display none
	.item	
		float left
.relative
	position relative
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.wrap
	width 1000px
.round//hacer el avatar redonto
	border-radius 50%
	overflow hidden
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		background rojo
		border-radius 5px
		height 5px
		width 30%
		position relative
		//animacion(1s state infinite) para hacer animacion con mixin
		animation 15s state infinite

	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
		animation 1s circle infinite linear

@keyframes state
	from
		width 0
	to
		width 100%

@keyframes circle
	0%
		transform scale(1)

	100%
		transform scale(2)
		opacity 0 //opacidad 0 es transparente

.header
	height 3.5em
	// a
	// 	display none
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.playing
	&.small
		width 20em
		margin 0 auto

.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em

.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro

.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em

.playlist
		display none
		width 22em
		padding 0 2em
		border-left 1px solid gris_claro
		.list
			list-style none
		.item
			padding 1em 0
		.action
			font-size .8em

.isotipo
	width 122px

.logo
	padding 1.3em 0
	overflow hidden
	background white
	display none
.avatar
	width 38px
	height 38px
.username
	color gris_claro
	position relative //porner el nombre
	top 10px //en el centro
	margin-left .5em
	&:after//hacer un triangulo
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .4em


@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100% //tenga todo el ancho de la pantalla
			height auto // valor de alto de la pantalla

	.playing
		&.medium
			width auto //recetea el valor de los anchos para que tenga el ancho de toda la pantalla la imagen de la cancion

@media screen and (min-width:1000px)
	body
		background gris_mas_claro

	.button-menu
		display none

	.playing
		padding-top 1.4em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden	

	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				text-transform uppercase
				cursor pointer
				padding 1em//para que ocupe toda la caja
				display block
				border-top 5px solid transparent//para que no se mueva todo lo de abajo
				transition 1s border-top//animacion tipo transicion
				&:hover
					border-top 5px solid gris_oscuro
	.music
		width 32.5em
		float left
		.description
			display none
	.header
		height auto
		border none
		.title
			display none

	.logo
	.playlist
		display block
	
	
